.speedDiceLayer {
  /* Full-screen overlay that doesn't affect layout */
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;

  /* Let dice render outside bounds if needed */
  overflow: visible;

  /* Don't block clicks on underlying UI */
  picking-mode: ignore;
}

.speedDiceStack {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: visible;
  picking-mode: ignore;
}

.speedDiceRow {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
  overflow: visible;
  picking-mode: ignore;
}

/* Small vertical spacing between rows */
.speedDiceRow--1,
.speedDiceRow--2,
.speedDiceRow--3,
.speedDiceRow--4 {
  margin-top: -26px;
}

.speedDice--stacked {
  margin-left: -28.5px;
}

.speedDice {
  position: relative;
  width: 72px;
  height: 72px;

  /* Let the images fill this box */
  overflow: visible;

  /* Allow hover detection on the dice itself */
  picking-mode: position;
}

.speedDice__img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  scale: 0.75;
  picking-mode: ignore;
}

#DiceBackground {
  width: 120%;
  height: 120%;
  left: -10.5%;
  top: -8.5%;
  --unity-image-tint-color: rgb(0, 0, 0);
}   

#Dice {
  --unity-image-tint-color: #ceb185;
  opacity: 0.8;
}

#DiceLines {
  --unity-image-tint-color: #baa075;
  opacity: 0.8;
  width: 60%;
  height: 60%;
  left: 21.5%;
  top: 26.6%;
  z-index: 1;
}

/* Hover */
.speedDice:hover > #Dice {
  --unity-image-tint-color: #f7d89e;
}

/* Roulette Animation (Unfinished / would work on it real soon) */
.speedDice__rouletteClip {
  position: absolute;
  width: 60%;
  height: 60%;
  left: 21.5%;
  top: 26.6%;
  overflow: hidden;
  picking-mode: ignore;
}

.speedDice__roulette {
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  picking-mode: ignore;
  scale: 9;
  opacity: 0.3;
}

/* Speed digits, each digit is positioned independently */
.speedDice__digit {
  position: absolute;
  picking-mode: ignore;
  --unity-image-tint-color: #baa075;
  z-index: 2; /* above DiceLines */
}

