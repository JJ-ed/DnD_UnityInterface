.handScreen {
  width: 100%;
  height: 100%;
  flex-grow: 1;

  /* Bottom-center placement */
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;

  /* Extra bottom/side padding so rotated cards aren't clipped by the screen edge */
  padding: 30px 40px 40px 40px;

  /* Let cards extend beyond this container */
  overflow: visible;
}

.hand {
  left: 0px;  
  top: 60px;

  flex-direction: row;
  flex-wrap: nowrap;

  /* Background sprite (assigned in C# if desired) */
  padding: 7px;
  -unity-background-scale-mode: scale-and-crop;

  /* Allow card decorations and overlap to render */
  overflow: visible;
}

